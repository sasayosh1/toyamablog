{
  "framework": "nextjs",
  "buildCommand": "npm run build",
  "env": {
    "NEXT_CACHE_FORCE_REFRESH": "true",
    "NEXT_CACHE_REVALIDATE_TAG": "security-headers-manual-trigger-2025-11-19-v1",
    "VERCEL_FORCE_NO_BUILD_CACHE": "1",
    "NEXT_IMAGE_OPTIMIZATION": "false"
  },
  "devCommand": "npm run dev",
  "installCommand": "npm install",
  "outputDirectory": ".next",
  "regions": ["hnd1"],
  "functions": {
    "src/app/**/*.tsx": {
      "maxDuration": 10
    }
  },
  "redirects": [
    {
      "source": "/:path*",
      "has": [
        {
          "type": "host",
          "value": "www.sasakiyoshimasa.com"
        }
      ],
      "destination": "https://sasakiyoshimasa.com/:path*",
      "permanent": true
    },
    {
      "source": "/:path*",
      "has": [
        {
          "type": "host",
          "value": "toyamablog.vercel.app"
        }
      ],
      "destination": "https://sasakiyoshimasa.com/:path*",
      "permanent": true
    },
    {
      "source": "/:path*",
      "has": [
        {
          "type": "host",
          "value": "www.toyamablog.vercel.app"
        }
      ],
      "destination": "https://sasakiyoshimasa.com/:path*",
      "permanent": true
    },
    {
      "source": "/:path*",
      "has": [
        {
          "type": "host",
          "value": "toyamablog-git-main-sasayoshis-projects.vercel.app"
        }
      ],
      "destination": "https://sasakiyoshimasa.com/:path*",
      "permanent": true
    },
    {
      "source": "/:path*",
      "has": [
        {
          "type": "host",
          "value": "toyamablog-*-sasayoshis-projects.vercel.app"
        }
      ],
      "destination": "https://sasakiyoshimasa.com/:path*",
      "permanent": true
    },
    {
      "source": "/:path*",
      "has": [
        {
          "type": "host",
          "value": "toyamablog-*.vercel.app"
        }
      ],
      "destination": "https://sasakiyoshimasa.com/:path*",
      "permanent": true
    }
  ],
  "rewrites": [
    {
      "source": "/api/sanity/(.*)",
      "destination": "https://aoxze287.api.sanity.io/v1/data/query/production?query=$1"
    }
  ]
}